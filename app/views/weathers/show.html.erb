<center>
<div class="col-md-6">
<h1>Here's some music we think you'll enjoy:</h1>
  <% if @weather.response['temperature'].to_f >= 78 %>
    <% if @weather.response['summary'].split(" ").include?("Clear") %>
      <%= render 'playlists/on_fleek' %>
    <% elsif @weather.response['summary'].split(" ").include?("Cloudy") %>
      <%= render 'playlists/indie_chillout' %>
    <% else @weather.response['summary'].split(" ").include?("Rain") %>
      <%= render 'playlists/deep_house_relax' %>
    <% end %>

  <% elsif @weather.response['temperature'].to_f.between?(60, 78) %>
    <% if @weather.response['summary'].split(" ").include?("Clear") %>
      <%= render 'playlists/indie_pop' %>
    <% elsif @weather.response['summary'].split(" ").include?("Cloudy") %>
      <%= render 'playlists/afternoon_acoustic' %>
    <% else @weather.response['summary'].split(" ").include?("Rain") %>
      <%= render 'playlists/rainy_day' %>
    <% end %>

  <% else @weather.response['temperature'].to_f < 60 %>
    <% if @weather.response['summary'].split(" ").include?("Clear") %>
      <%= render 'playlists/happy_hipster' %>
    <% elsif @weather.response['summary'].split(" ").include?("Cloudy") %>
      <%= render 'playlists/autumn_leaves' %>
    <% else @weather.response['summary'].split(" ").include?("Rain") %>
      <%= render 'playlists/coffee_table_jazz' %>
    <% end %>
  <% end %>
</div>


